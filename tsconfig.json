{
  "compilerOptions": {
    "target": "ES2017",
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "jest",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "module": "esnext"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__test__",
  ]
}